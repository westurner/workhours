<div id="toolbar">
    {% if viewer_username %}
    <span class="toolbar">
        Logged in as: <b>{{ viewer_username }}</b>.
        <a href="{{ request.route_url('logout') }}">logout</a>.</span>
    {% else %}
    <span>
        <b><a href="{{ request.route_url('register')
                }}">create an account</a></b> | 
        <b><a href="{{ request.route_url('login') }}">log in</a></b>
    </span>
    {% endif %}
</div>
